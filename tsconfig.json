{
  "compilerOptions": {
    "module": "ESNext",  
    "moduleResolution": "node",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
